<UserControl x:Class="GeneticResearcher.Views.OperadorControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             MinHeight="100"
             MinWidth="350"
             MaxHeight="200"
             d:DesignHeight="200" 
             d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition MaxHeight="500"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Slider Name="Slider" 
                HorizontalAlignment="Stretch" 
                Margin="10,10,10,10" 
                VerticalAlignment="Top"
                MinWidth="100"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                IsSnapToTickEnabled="True"
                TickFrequency="1"
                Minimum="0"
                Maximum="100"
                Value="{Binding Porcentaje}"/>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.Column="3">
            <Label Name="Percentaje" 
                   Content="{Binding ElementName=Slider, Path=Value}"
                   VerticalAlignment="Center"
                   Width="30"
                   HorizontalAlignment="Right"/>
            <Label Content="%"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"/>
        </StackPanel>

        <ListBox Grid.Row="1"
                 Grid.Column="0"
                 HorizontalAlignment="Stretch" 
                 Margin="10,10,10,10" 
                 VerticalAlignment="Stretch"
                 ItemsSource="{Binding Path=OperadoresDisponibles}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="1" 
                    Grid.Column="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Stretch" 
                    Orientation="Vertical">
            <Button Margin="5">+</Button>
            <Button Margin="5">-</Button>
        </StackPanel>

        <ListBox Grid.Row="1"
                 Grid.Column="2"
                 HorizontalAlignment="Stretch" 
                 Margin="10,10,10,10" 
                 VerticalAlignment="Stretch"
                 ItemsSource="{Binding Path=OperadoresDisponibles}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="1" 
                    Grid.Column="3" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Stretch" 
                    Orientation="Vertical">
            <Button Margin="5">▲</Button>
            <Button Margin="5">▼</Button>
        </StackPanel>
    </Grid>
</UserControl>

